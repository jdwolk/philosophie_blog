<h1>Current posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Published at</th>
    <th>Body</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= link_to post.title, post %></td>
    <td><%= post.published_at %></td>
    <td><%= link_to truncate(post.body, :length => 25), post %></td>
    <td><%= link_to 'Show', post %></td>
  </tr>
<% end %>
</table>

<br />

